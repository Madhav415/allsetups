#!/bin/bash

# Update package list and upgrade packages
sudo apt update -y && sudo apt upgrade -y

# Install necessary dependencies
sudo apt install -y wget gnupg lsb-release

# Add HashiCorp GPG key
wget -O- https://apt.releases.hashicorp.com/gpg | sudo gpg --dearmor -o /usr/share/keyrings/hashicorp-archive-keyring.gpg

# Add HashiCorp repository
echo "deb [signed-by=/usr/share/keyrings/hashicorp-archive-keyring.gpg] https://apt.releases.hashicorp.com $(lsb_release -cs) main" | sudo tee /etc/apt/sources.list.d/hashicorp.list

# Update package list and install Terraform
sudo apt update && sudo apt install terraform -y

# Install AWS CLI
sudo apt install awscli -y

# Configure AWS CLI
echo "Configuring AWS CLI..."
aws configure

# Verify installations
echo "Verifying installations..."
terraform --version
aws --version

# Optionally, set up Terraform autocomplete (for bash)
echo "Do you want to set up Terraform autocomplete for bash? (y/n)"
read -r setup_autocomplete
if [ "$setup_autocomplete" = "y" ]; then
    terraform -install-autocomplete
    echo "Terraform autocomplete set up successfully."
else
    echo "Skipping Terraform autocomplete setup."
fi

# Prompt to initialize Terraform (in current directory)
echo "Do you want to initialize Terraform in the current directory? (y/n)"
read -r init_terraform
if [ "$init_terraform" = "y" ]; then
    terraform init
    echo "Terraform initialized successfully."
else
    echo "Skipping Terraform initialization."
fi

echo "Setup completed!"
